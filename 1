using System;
namespace Rubles
{
    class Program
    {
        static void Main(string[] args)
        {
            string password;
            int tries = 0;
            string userTry;

            Console.Write("Придумайте пароль: ");
            password = Console.ReadLine();
            Console.Clear();

            while (tries != 3)
            {
                Console.WriteLine("Введите пароль");
                Console.Write($"{tries + 1} попытка: ");
                userTry = Console.ReadLine();

                if (userTry == password)
                {
                    Console.WriteLine("Авторизация успешна!");
                    tries = 3;
                }
                else
                {
                    tries++;
                    Console.Clear();
                    Console.WriteLine("Неверно введенный пароль!");
                    
                    if (tries == 3)
                    {
                        Console.WriteLine("Попытки закончились! Попробуйте через 24ч.");
                    }
                }
            }

            Console.Read();
        }
    }
}
